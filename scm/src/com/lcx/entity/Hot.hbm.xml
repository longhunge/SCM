<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lcx.entity">
	<class name="Hot">
		<!-- 主键 -->
		<id name="hotid" type="java.lang.Integer">
			<column name="hotid" length="11"></column>
			<generator class="native" />
		</id>
		
		<!-- 非主键 类型可以不写 -->
		<property column="hot1" length="32" generated="never" lazy="false"
			name="hot1" type="java.lang.String" />
		
	</class>
</hibernate-mapping>
