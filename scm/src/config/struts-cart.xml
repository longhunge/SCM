<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="cart-action" namespace="/cart" extends="struts-default">
	<action name="cart_*" class="com.lcx.action.CartAction" method="{1}">
		<result name="detail">/WEB-INF/user/cart.jsp</result>
		<result name="1" type="redirectAction">
			<param name="actionName">product_redirect</param>
		</result>
	</action>
	</package>
</struts>